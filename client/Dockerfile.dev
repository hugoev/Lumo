FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy source code (will be mounted as volume for hot reloading)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
